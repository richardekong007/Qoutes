<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">@color/teal_green</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="labelStyle">
        <item name="android:background">@drawable/rounded_rectangle_teal</item>
        <item name="android:textSize">@dimen/margin_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name ="textInputStyle">
        <item name = "android:textColor">@android:color/black</item>
        <item name = "android:textColorHint">@color/teal_green</item>
        <item name = " android:textSize">@dimen/text_medium</item>
        <item name= "android:textStyle">normal</item>
        <item name ="android:inputType">textAutoComplete</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
    </style>

    <style name = "normalTextStyle">
        <item name = "android:textColor">@color/teal_green</item>
        <item name = "android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name = "switchToggleStyle">
        <item name="colorControlActivated">@color/teal_green</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
        <item name="android:colorForeground">#42221f1f</item>
        <item name="android:textColor">@color/teal_green</item>
    </style>

</resources>
